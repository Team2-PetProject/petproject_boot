<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" monitorInterval="30">
	<Properties>
		<Property name="BASE_DIR">C:\log</Property>
		<Property name="LOG_PATTERN"
			value="[%date{yyyy-MM-dd HH:mm:ss}] %level %logger{36}(%file:%line) - %msg%n"></Property>
	</Properties>

	<Appenders>
		<Console name="ConsoleAppender" target="SYSTEM_OUT"
			follow="true">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>

		<RollingFile name="file"
			fileName="${BASE_DIR}/logfile.log"
			filePattern="${BASE_DIR}/logfile.%d{yyyyMMdd}.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy>
				<Delete basePath="${BASE_DIR}">
					<IfFileName glob="*.log" />
					<IfLastModified age="30d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
		<!--2차 작업 -->
		<RollingFile
			name="OrderDoneFile"
			fileName="${BASE_DIR}/order_done.log"
			filePattern="${BASE_DIR}/order_done_log.%d{yyyy-MM-dd}.txt">
			<PatternLayout
				pattern="%msg %d{yyyy-MM-dd-hh-mm}%n" />
				<!--순서도 매우 중요  -->
			<Policies>
				<TimeBasedTriggeringPolicy />
				<!--새로운 파일 생성 시간  -->
			</Policies>
			<DefaultRolloverStrategy>
			 <!--삭제 설정 안잡음  -->
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>

	<!--특정 메소드 출력할 곳을 정해야한다. -->
	<Loggers>
		<Logger name="com.example.service.OrderService" level="INFO"
			additivity="false">
			<AppenderRef ref="OrderDoneFile" />
		</Logger>
		<!--1차 작업 끝 -->

		<Root level="INFO">
			<AppenderRef ref="ConsoleAppender" />
			<AppenderRef ref="file" />
		</Root>

		<Logger name="com.pacakge.controller" level="DEBUG"
			additivity="false">
			<AppenderRef ref="ConsoleAppender" />
			<AppenderRef ref="file" />
		</Logger>
	</Loggers>
</Configuration>